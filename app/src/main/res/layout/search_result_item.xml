<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/recipe_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/search_item_margin"
        tools:src="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/recipe_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/search_item_margin"
        android:layout_toEndOf="@id/recipe_thumbnail"
        android:layout_toStartOf="@+id/moreIndicator"
        android:textSize="@dimen/search_result_text_size"
        tools:text="Recipe title..." />

    <ImageView
        android:id="@id/moreIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/search_item_margin"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

</RelativeLayout>